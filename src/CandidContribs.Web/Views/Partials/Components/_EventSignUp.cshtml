@model CandidContribs.Core.Models.Shared.EventSignUpViewModel
<div class="component event-sign-up has-background" id="signup">
    <div class="container">
        <div class="row">

            @Model.Text

            @if (Model.MailchimpGroupId.GetValueOrDefault() > 0)
            {
                <div id="mc_embed_signup">
                    <form action="https://candidcontributions.us19.list-manage.com/subscribe/post?u=c133eb6d02a80b9606452f45d&amp;id=d26bcc60d8" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                        <div id="mc_embed_signup_scroll">
                            <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
                            <div class="mc-field-group">
                                <label for="mce-EMAIL">
                                    Email Address <span class="asterisk">*</span>
                                </label>
                                <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
                            </div>
                            <div class="mc-field-group input-group" style="display: none;">
                                <strong>Registered Events </strong>
                                <ul>
                                    <li>
                                        <input type="checkbox" value="@Model.MailchimpGroupId" name="group[77817][@Model.MailchimpGroupId]" id="mce-group[77817]-77817-@Model.MailchimpGroupId" checked="checked"><label for="mce-group[77817]-77817-@Model.MailchimpGroupId"></label>
                                    </li>
                                </ul>
                            </div>
                            <div id="mce-responses" class="clear">
                                <div class="response" id="mce-error-response" style="display: none"></div>
                                <div class="response" id="mce-success-response" style="display: none"></div>
                            </div> <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_c133eb6d02a80b9606452f45d_d26bcc60d8" tabindex="-1" value=""></div>
                            <div class="clear">
                                <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="btn btn--input">
                            </div>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>
