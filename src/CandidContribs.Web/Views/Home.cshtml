@inherits Umbraco.Web.Mvc.UmbracoViewPage<CandidContribs.Core.Models.Pages.HomePageModel>
@{
    Layout = "_Master.cshtml";
}

@if (Model.LatestEpisode != null)
{
    @Html.Partial("_HomepageBanner", Model.LatestEpisode)
}

<div class="main-content main-content--padded">

    <h2 class="intro-text cancon-hand">@Model.AboutUsTitle</h2>
    <p class="intro-text">@Model.AboutUsDescription</p>

    <div class="align--center">
        <p>@Html.Raw(Model.AboutUsLinkText)</p>

        <div>
            <img class="contribs-team" src="@Model.AboutUsImage.MediaUrl()" alt="candid contribs team" />
        </div>
    </div>
</div>

@if (Model.UpcomingEvents.Any())
{
    <h2 class="section-header cancon-hand align--center">Upcoming events</h2>
    foreach (var eventPage in Model.UpcomingEvents)
    {
        <div class="@eventPage.CssClass">
            <div class="mobile-deets align--center">
                <img src="@eventPage.HeaderLogo.MediaUrl()" alt="@eventPage.Name" />
            </div>
        </div>
        <div class="main-content align--center">
            <h3><a href="@eventPage.Url">@eventPage.Name full details and sign up</a></h3>
        </div>
    }
    <div class="main-content">
        <p>&nbsp;</p>
    </div>
}

@if (Model.PastEvents.Any())
{
    <h2 class="section-header cancon-hand align--center">Past events</h2>
    foreach (var eventPage in Model.PastEvents)
    {
        <a href="@eventPage.Url">
            <div>
                <div class="mobile-deets align--center">
                    <img src="@eventPage.HeaderLogo.MediaUrl()" alt="@eventPage.Name" />
                </div>
            </div>
        </a>

    }
    <div class="main-content">
        <p>&nbsp;</p>
    </div>
}